<!DOCTYPE html>
<html  lang="ro">
    <head>
        <meta name="description" content="Games for everyone.">
        <meta name="keywords" content="games for everyone, jocuri, utilizatori">
        <link rel="stylesheet" href="/resurse/css/useri.css" type="text/css" />
        <title>CofetÄƒria Dulcelind - utilizatori</title>
        <%- include("../fragmente/head") %>     
        <script type="text/javascript" src=/resurse/js/produse.js></script>
    </head>
    <body>
    <%- include("../fragmente/header") %>

    <main class="container mt-5">
		<div class="afisaj">
			<h2>Useri</h2>
			<div class="table-responsive">
				<table id="useri" class="table table-striped table-bordered">
					<thead class="thead-dark">
						<tr>
							<th>ID</th>
							<th>Username</th>
							<th>Nume</th>
							<th>Email</th>
							<th>Data</th>
							<th>Rol</th>
						</tr>
					</thead>
					<tbody>
						<% for (var i = 0; i < useri.length; i++) { 
							if(useri[i].rol=="comun"){
						%>
						<tr>
							<td><%= useri[i].id %></td>
							<td><%= useri[i].username %></td>
							<td><%= useri[i].nume %></td>
							<td><%= useri[i].email %></td>
							<%  
								var d = new Date(useri[i].data_adaugare);
								var sir_data = `${d.getDate()}/${d.getMonth()+1}/${d.getFullYear()} ${d.getHours()}:${d.getMinutes()}:${d.getSeconds()}`;
							%>
							<td><%= sir_data %></td>
							<td><%= useri[i].rol %></td>
						</tr> 
						<% } %>          
						<% } %>
					</tbody>
				</table>
			</div>
	
			<p>Sterge utilizator</p>
			<form id="sterge" method="post" action="/sterge_utiliz" class="form-inline">
				<div class="form-group mb-2">
					<label for="id_utiliz" class="sr-only">Id</label>
					<input type="text" name="id_utiliz" class="form-control" id="id_utiliz" placeholder="Id">
				</div>
				<button type="submit" class="btn btn-primary mb-2">Submit</button>
			</form>
		</div>
	</main>
	


    <%- include("../fragmente/footer") %>

</body>
</html>